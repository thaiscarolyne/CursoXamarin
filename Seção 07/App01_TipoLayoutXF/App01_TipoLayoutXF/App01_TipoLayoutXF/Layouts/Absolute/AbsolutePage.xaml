<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_TipoLayoutXF.Layouts.Absolute.AbsolutePage">
    <ContentPage.Content>
        <AbsoluteLayout>
            <BoxView AbsoluteLayout.LayoutFlags="SizeProportional" AbsoluteLayout.LayoutBounds="0, 0, 1, 0.3" BackgroundColor="Red"/> <!-- LayoutBounds = (X,Y,LARGURA,ALTURA) -->
            <BoxView AbsoluteLayout.LayoutFlags="XProportional" AbsoluteLayout.LayoutBounds="0.5, 50, 100, 100" BackgroundColor="Green"/>
            <BoxView AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5, 0.8, 0.8, 0.2" BackgroundColor="Blue"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>