<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ControleXF.Controles.PickerPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker Title="Empresas de TI" TextColor="HotPink" SelectedIndexChanged="ActionChangeIndex" >
                <Picker.Items>
                    <x:String>Microsoft</x:String>
                    <x:String>Apple</x:String>
                    <x:String>Oracle</x:String>
                    <x:String>SpaceX</x:String>
                    <x:String>Tesla</x:String>
                </Picker.Items>

                <Picker.SelectedIndex>2</Picker.SelectedIndex>
            </Picker>            

            <Label x:Name="LblEmpresa"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>