<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App02_TipoPaginaXF.TipoPagina.Navigation.Pagina1"
             Title="Título da Navigation">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Pesquisa" Icon="xamarin.png"/>
        <ToolbarItem Text="Detalhes" Icon="play.png"/>
        <ToolbarItem Text="Ordenar" Icon="Page.png"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Eu sou uma content page!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Chamar modal" Clicked="ChamarModal"/>

            <Button Text="Ir para página 2" Clicked="MudarParaPagina2"/>

            <Button Text="Chamar master" Clicked="MudarParaMaster"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>